<Application x:Class="HomeCenter.NET.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:HomeCenter">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary>
                    <local:Bootstrapper x:Key="Bootstrapper" />
                    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
                    <Style x:Key="HiddenWindowStyle" TargetType="Window">
                        <Setter Property="Visibility" Value="Hidden"/>
                    </Style>
                    <FontFamily x:Key="KillTheNoize">pack://application:,,,/Fonts/#Kill The Noise(RUS BY LYAJKA)</FontFamily>
                    <Brush x:Key="MainBackgroundBrush">Black</Brush>
                    <Brush x:Key="MainForegroundBrush">Yellow</Brush>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
